<Window x:Class="DemoEx.WPF.Views.AddServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoEx.WPF.Views"
        mc:Ignorable="d"
        Title="Добавление сервиса" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel>
            <TextBlock Text="{Binding Id, Mode=OneWayToSource}"
                       IsEnabled="False"/>
            <TextBox Text="{Binding ServiceName, Mode=OneWayToSource}"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Image Width="250"
                       Margin="10"
                       Source="{Binding ImagePath}"/>
                <Button Grid.Row="1"
                        Margin="15"
                        Content="Добавить изображение"
                        Command="{Binding AddImageCommand}"/>
            </Grid>
            <TextBox Text="{Binding Duration, StringFormat='{}{HH:mm}', Mode=OneWayToSource}"/>
            <TextBox Text="{Binding Cost, StringFormat='{}{0:D}', Mode=OneWayToSource}"/>
            <TextBox Text="{Binding Discount, StringFormat='{}{0:P}', Mode=OneWayToSource}"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="25">
            <Button Content="Добавить услугу"
                    Command="{Binding AcceptCommand}"
                    Margin="10 0"/>
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Margin="10 0"/>
        </StackPanel>
    </Grid>
</Window>
